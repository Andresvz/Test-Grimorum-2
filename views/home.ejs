
<!-- Page Content -->
<div class="container" ng-controller="ProductCtrl">

  <hr>

  <div class="row">
    <div class="col-lg-12" align="center">
      <h3>Nuestros Productos</h3>
    </div>
  </div>
  <br>
  <br>
  <!-- /.row -->
  <div class="row text-center">

    <div class="col-md-3 col-sm-6 hero-feature" ng-repeat="product in products_to">
      <div class="thumbnail">
        <img src="/media/{{product.image }} " alt="" style="width: 300px;height:150px;">

        <div class="caption">
          <h3> {{ product.name }} </h3>
          <p style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" >
            {{ product.description}}
          </p>
          <h3 style="color: #CC2525;"> {{product.price | currency  }}</h3>
          <a href="javascript:;" ng-click="addToCar(product)" class="btn btn-success">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            Comprar
          </a> 
          <a href="javascript:;" class="btn btn-primary" ng-click="goDetail(product)">
            <i class="fa fa-info-circle" aria-hidden="true"></i>
            Ver mas 
          </a>
        </div>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  var products_all = JSON.parse('<%-JSON.stringify(products)%>');
</script>

