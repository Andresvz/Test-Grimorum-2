<div class="container"ng-controller="UserCtrl"  ng-cloak>
  <div class="row">
    <div class="col-lg-12">
      <h1 style="display: inline-block; " class="page-header">Usuarios <small>Administrador de Usuarios</small></h1>
      <button  style="     display: inline-block;
        float: right;"class="btn btn-success" ng-click="showM()"><i class="fa fa-plus"></i> Agregar</button>
    </div>
  </div>
  <br>
  <br>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Username</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Email</th>
        <th>Tipo</th>
        <th>Opciones</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="user in $parent.users">
        <td>{{user.username}}</td>
        <td>{{user.first_name}}</td>
        <td>{{user.last_name}}</td>
        <td>{{user.email}}</td>
        <td>{{user.type}}</td>
        <td>
          <a  ng-click="showM(user,$index)"class="btn btn-warning "> 
            <i class="fa fa-pencil" aria-hidden="true"></i>
          Editar</a>
        <a  class="btn btn-danger " ng-click="deleteP(user.id,$index)">
            <i class="fa fa-trash" aria-hidden="true"></i> Eliminar
          </a>
        </td>
      </tr>
    </tbody>
  </table>
</div>

</div>

<div class="modal fade" tabindex="-1" role="dialog" id="modal" ng-controller="UserCtrl">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Agregar Usuario</h4>
      </div>
      <div class="modal-body">
        <div class="content">
          <div ng-form="formM" novalidate class="form-horizontal">
            <fieldset>
              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="username">Nombre de Usuario</label>  
                <div class="col-md-4">
                  <input id="username" name="username" type="text" ng-model="$parent.obj.username"
                  placeholder="root" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="email">Email</label>  
                <div class="col-md-4">
                  <input id="email" name="email" type="email" ng-model="$parent.obj.email" 
                  placeholder="ejemplo@email.com" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="Nombre">Nombre</label>  
                <div class="col-md-4">
                  <input id="Nombre" name="Nombre" type="text" ng-model="$parent.obj.first_name"
                  placeholder="nombre" class="form-control input-md" required="">

                </div>
              </div>

              <!-- Text input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="last_name">Apellido</label>  
                <div class="col-md-4">
                  <input id="last_name" name="last_name" type="text" ng-model="$parent.obj.last_name"
                  placeholder="Apellido" class="form-control input-md" required="">

                </div>
              </div>

              <div class="form-group">
                <label class="col-md-4 control-label" for="last_name">Contraseña</label>  
                <div class="col-md-4">
                  <input id="last_name" name="last_name" type="password" ng-model="$parent.obj.password"
                  placeholder="contraseña" class="form-control input-md" required="">

                </div>
              </div>
              <!-- Select Basic -->
              <div class="form-group">
                <label class="col-md-4 control-label" for="type">Tipo</label>
                <div class="col-md-4">
                  <select id="type" name="type" required class="form-control" ng-model="$parent.obj.type">
                    <option value="admin" selected>Administrator</option>
                    <option value="client">Ciente</option>
                  </select>
                </div>
              </div>

            </fieldset>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" ng-click="add()">Agregar</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
