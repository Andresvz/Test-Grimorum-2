
<div class="container"ng-controller=" SalesCtrl"  ng-cloak>
  <div class="row">
    <div class="col-lg-12">
      <h1 style="display: inline-block; " class="page-header">Ventas <small>Administrador de Ventas</small></h1>
    </div>
  </div>
  <br>
  <br>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Productos</th>
        <th>Total</th>
        <th>Fecha</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="sale in $parent.sales ">
        <td>{{sale.user.first_name}}  {{sale.user.last_name}}</td>
        <td>
          <ul>
            <li ng-repeat="product in sale.products">
              {{product.name}} 
            </li>
          </ul>
        </td>
        <td>{{sale.total | currency }}</td>
        <td>{{sale.createdAt | date:'mediumDate'}}</td>
      </tr>
    </tbody>
  </table>
</div>

</div>
